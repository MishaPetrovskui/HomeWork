import random
while True:
    first_number = random.randint(0,100)
    second_number = random.randint(0,100)
    action = int(input(f"{first_number} + {second_number} = "))
    if action == "quit":
        break
    elif action == first_number + second_number:
        print("Вірно")

    else:
        print("Невірно")
